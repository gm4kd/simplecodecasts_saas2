
<div class="jumbotron text-center" >
  <h1>Welcome To Gaston's World</h1>
  <h3>the resume of Gaston Moliva basketball career</h3>
</div>
<div class="row">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile </h2>
        <% if current_user.profile %>
          <%= link_to "Edit your profile", "#", class: 'btn btn-default btn-lg btn-block' %>
          <%= link_to "View your profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <% else %>
          <%= link_to "Create your profile!", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center"> The Community</h2>
        <p> Visit the Community to meet other developers, entrepreneurs, and investors!</p>
        <%= link_to "Visit the community", "#", class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  <% else %>

    <div class="col-md-6">
      <div class="well">
        <h2 class="text-centerAmateur Membership">Amateur Membership</h2>
        <h4>Sign up for the free and get basic access to the my limited world.</h4>
        <br/>
        <%= link_to "Sign up with BASIC", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>

       <div class="col-md-6">
         <div class="well">
           <h2 class="text-centerAmateur Membership">Pro Membership</h2>
           <h4>Sign up for the pro account for $10/month and get total access to my entire world.</h4>
           <%= link_to "Sign up with PRO", new_user_registration_path(plan:@pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
         </div>
      </div>
  <% end %>
</div>